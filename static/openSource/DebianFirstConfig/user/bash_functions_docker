# PowerShell
# TEST: powershell /usr/bin/pwsh -Command "Write-Output 'Hello world'"
powershell()  {
  dockerContainer --name powershell  --net=host mcr.microsoft.com/powershell:7.3-debian-bullseye-slim 
}
export -f powershell

# alias powershell='      dockerContainer --name powershell       --net=host mcr.microsoft.com/powershell:7.3-debian-bullseye-slim'
# TEST:  powershell /usr/bin/pwsh -Command "Write-Output 'Hello world'"
# RUN:   powershell /usr/bin/pwsh /path/to/script.ps

# node
nodeRun() {
  # Save the first and second parameters
  declare -A headParams
  headParams+=$1
  headParams+=$2

  # Remove the first and second parameters from the parameter list
  shift 2
  
  # Save all other parameters except the first and second
  declare -A tailParams
  tailParams=$@

  dockerContainer   $headParams  node:20.3.1-bookworm $tailParams
}

# node JS
# TEST: node --version
node() {
  nodeRun " --name node "     " "     "$@"
}
export -f node

# npm
# TEST: npm --version
npm() { 
  nodeRun " --name npm "     " --entrypoint /usr/local/bin/npm "  "$@"
}
export -f npm

# alias node='            dockerContainer --name node             node:20.3.1-bookworm '
# TEST: node --version
# alias npm='             dockerContainer --name npm              --entrypoint "/usr/local/bin/npm" node:20.3.1-bookworm '

# Run the hugo docker image
# Test: hugoRun  " -p 1414:1414 " " -p 1515:1515 " "version"
hugoRun() {
  # Save the first and second parameters
  declare -A headParams
  headParams+=$1
  headParams+=$2

  # Remove the first and second parameters from the parameter list
  shift 2
  
  # Save all other parameters except the first and second
  declare -A tailParams
  tailParams=$@

  dockerContainer --name hugo $headParams -p 1313:1313 klakegg/hugo:0.111.3-debian $tailParams
}
export -f hugoRun

# Hugo server
# Test: hugoRun  " -p 1414:1414 " " -p 1515:1515 " "version"
# Run: hugoDev
hugoDev() {
  hugoRun " -p 1414:1414 " " -p 1515:1515 "   server   --debug --environment mainroad --verbose --gc --disableFastRender --ignoreCache --noHTTPCache --renderStaticToDisk "$@"
}
export -f hugoDev

# Hugo works with draft and future posts
# Run: hugoDevDraft
hugoDevDraft() {
  hugoDev --buildDrafts --buildFuture "$@"
}
export -f hugoDevDraft

# Hugo prod
# "$PWD/.."" mount the parent directory, and after select the folder with --source ./codingepaduli
hugoProd() {
  hugoRun " --name hugo-prod "  " -v $PWD/..:/usr/src/SVN2 "  " --environment mainroad " "--source /usr/src/SVN2/codingepaduli" "--destination /usr/src/SVN2/codingepaduli.github.io"
}
export -f hugoProd

